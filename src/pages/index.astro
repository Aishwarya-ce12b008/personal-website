---
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import BookCard from "@/components/BookCard.astro";
import { getAllPosts } from "@/data/post";
import { books } from "@/data/books";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Posts
const MAX_POSTS = 3;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Books - show recently read books
const recentBooks = books
	.filter((book) => book.status === "read" && book.yearRead)
	.sort((a, b) => (b.yearRead || 0) - (a.yearRead || 0))
	.slice(0, 5);

// Helper for Book Cover
const getBookCover = (book: any) => {
	if (book.cover) return book.cover;
	if (book.isbn) return `https://covers.openlibrary.org/b/isbn/${book.isbn}-L.jpg`;
	return "https://placehold.co/400x600?text=No+Cover";
};
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6 font-semibold">hello world!</h1>
		<div class="max-w-prose space-y-5 leading-relaxed">
			<p>
				I’m <span class="text-accent dark:text-accent-dark bg-accent/10 dark:bg-accent-dark/10 rounded-sm px-1 py-0.5 font-semibold">Aishwarya</span>, building products at <a href="https://www.vyaparapp.in" target="_blank" rel="noopener noreferrer" class="text-accent dark:text-accent-dark hover:underline">Vyapar</a>. Over the last 8+ years, I’ve worked across growth and platform to ship products that feel simple on the surface and are thoughtfully engineered underneath.
			</p>
			<p>
				Before this, I led product at Pitstop and started my career in management consulting. Across these roles, I’ve learned that great products come from strong fundamentals: <span class="underline decoration-accent/50 underline-offset-2">tight problem framing, sharp prioritization, and a deep respect for craft.</span> 
			</p>
			<p>
				I write occasionally about product, AI, and the lessons I’m picking up along the way.
			</p>
		</div>
		<div class="mt-6">
			<SocialList />
		</div>
	</section>
	<section class="mt-16 relative">
		<h2 class="title text-accent mb-6 text-xl"><a href="/posts/">Writings</a></h2>
		<ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-2">
						<a href={`/posts/${p.id}/`} class="block aspect-[2/1.5] overflow-hidden rounded-lg bg-gray-100 dark:bg-gray-800">
                            {p.data.ogImage ? (
                                <img src={p.data.ogImage} alt={p.data.title} class="h-full w-full object-cover transition-transform duration-300 hover:scale-105" />
                            ) : p.data.coverImage ? (
                                <img src={p.data.coverImage.src} alt={p.data.title} class="h-full w-full object-cover transition-transform duration-300 hover:scale-105" />
                            ) : (
                                <div class="flex h-full w-full items-center justify-center text-textColor/20">
                                    <svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                </div>
                            )}
                        </a>
                        <div>
                            <a href={`/posts/${p.id}/`} class="font-medium text-base leading-snug hover:text-accent transition-colors block">
                                {p.data.title}
                            </a>
                        </div>
					</li>
				))
			}
		</ul>
	</section>
	{
		recentBooks.length > 0 && (
			<section class="mt-16 relative">
				<div class="flex items-center justify-between mb-6">
					<h2 class="title text-accent text-xl">
						<a href="/books/">My Bookshelf</a>
					</h2>
					<a
						href="/books/"
						class="text-sm text-textColor/70 hover:text-accent dark:hover:text-accent-dark transition-colors"
					>
						view all →
					</a>
				</div>
				<ul class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6" role="list">
					{recentBooks.map((book) => {
                        const cover = getBookCover(book);
                        return (
						<li>
							<button
                                type="button"
                                class="book-trigger flex flex-col gap-2 w-full text-left group"
                                data-title={book.title}
                                data-author={book.author}
                                data-cover={cover}
                                data-rating={book.rating}
                                data-desc={book.description}
                                data-rec={book.recommendation}
                            >
                                <div class="relative aspect-[2/3] w-full overflow-hidden rounded-lg shadow-md bg-gray-100">
                                    <img
                                        src={cover}
                                        alt={`Cover of ${book.title}`}
                                        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                                        loading="lazy"
                                    />
                                </div>
                                <div class="hidden sm:block">
                                    <h3 class="text-sm font-medium text-textColor leading-snug group-hover:text-accent transition-colors line-clamp-2">
                                        {book.title}
                                    </h3>
                                    
                                    {book.rating && (
                                        <div class="flex items-center gap-1 mt-1" aria-label={`${book.rating} out of 5 stars`}>
                                            {Array.from({ length: 5 }).map((_, i) => {
                                                const isFull = i < Math.floor(book.rating || 0);
                                                const isHalf = !isFull && i < (book.rating || 0);
                                                const isEmpty = !isFull && !isHalf;

                                                return (
                                                    <svg
                                                        aria-hidden="true"
                                                        class="h-2.5 w-2.5"
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        viewBox="0 0 24 24"
                                                        stroke-width="2"
                                                    >
                                                        {isFull && (
                                                            <circle cx="12" cy="12" r="10" class="fill-accent text-accent" stroke="currentColor" />
                                                        )}
                                                        {isHalf && (
                                                            <>
                                                                <circle cx="12" cy="12" r="10" class="fill-transparent text-textColor/10" stroke="currentColor" />
                                                                <path d="M12 2 A10 10 0 0 0 12 22 Z" class="fill-accent text-accent" stroke="none" />
                                                            </>
                                                        )}
                                                        {isEmpty && (
                                                            <circle cx="12" cy="12" r="10" class="fill-transparent text-textColor/10" stroke="currentColor" />
                                                        )}
                                                    </svg>
                                                );
                                            })}
                                        </div>
                                    )}
                                </div>
                            </button>
						</li>
					)})}
				</ul>

				{/* Book Detail Modal - Same as in /books */}
				<dialog
					id="book-modal"
					class="bg-global-bg text-textColor backdrop:bg-black/50 backdrop:backdrop-blur-sm open:animate-fade-in m-auto w-full max-w-2xl rounded-xl border border-textColor/10 p-0 shadow-2xl"
				>
					<div class="relative flex flex-col md:flex-row">
						<button
							id="close-modal"
							class="text-textColor/60 hover:text-textColor hover:bg-textColor/5 absolute top-2 right-2 z-10 rounded-full p-2 transition-colors cursor-pointer"
							aria-label="Close modal"
						>
							<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"
								></path>
							</svg>
						</button>

						<div class="bg-textColor/5 md:w-1/3 flex items-center justify-center p-4 md:p-0">
							<img
								id="modal-cover"
								src=""
								alt=""
								class="h-64 w-full object-contain md:h-full"
							/>
						</div>
						
						<div class="flex flex-col p-6 md:w-2/3 gap-4 md:border-l md:border-textColor/10">
							<div>
								<h2 id="modal-title" class="text-xl font-bold leading-tight text-pretty pr-8"></h2>
								<p id="modal-author" class="text-textColor/60 text-sm font-medium mt-1"></p>
							</div>

							<div id="modal-rating" class="flex items-center gap-1">
								{/* Rating stars populated by JS */}
							</div>

							<div class="space-y-4 text-sm">
								<div>
									<h3 class="font-medium text-xs uppercase tracking-wider text-textColor/40 mb-1">About</h3>
									<p id="modal-desc" class="text-textColor/80 leading-relaxed text-pretty"></p>
								</div>

								<div id="modal-rec-container" class="hidden">
									<h3 class="font-medium text-xs uppercase tracking-wider text-textColor/40 mb-1">My Thoughts</h3>
									<p id="modal-rec" class="text-accent italic leading-relaxed text-pretty"></p>
								</div>
							</div>
						</div>
					</div>
				</dialog>
			</section>
		)
	}
</PageLayout>

<script>
	const modal = document.getElementById("book-modal") as HTMLDialogElement;
	const closeModalBtn = document.getElementById("close-modal");
	const bookTriggers = document.querySelectorAll(".book-trigger");

	// Modal Elements
	const modalCover = document.getElementById("modal-cover") as HTMLImageElement;
	const modalTitle = document.getElementById("modal-title");
	const modalAuthor = document.getElementById("modal-author");
	const modalRating = document.getElementById("modal-rating");
	const modalDesc = document.getElementById("modal-desc");
	const modalRec = document.getElementById("modal-rec");
	const modalRecContainer = document.getElementById("modal-rec-container");

	// Modal Logic
	bookTriggers.forEach((trigger) => {
		trigger.addEventListener("click", () => {
			const data = (trigger as HTMLElement).dataset;
			
			if (modalCover) modalCover.src = data.cover || "";
			if (modalTitle) modalTitle.textContent = data.title || "";
			if (modalAuthor) modalAuthor.textContent = data.author || "";
			if (modalDesc) modalDesc.textContent = data.desc || "No description available.";
			
			// Recommendation
			if (data.rec) {
				if (modalRec) modalRec.textContent = data.rec;
				modalRecContainer?.classList.remove("hidden");
			} else {
				modalRecContainer?.classList.add("hidden");
			}

			// Rating
			if (modalRating) {
				modalRating.innerHTML = "";
				const rating = parseFloat(data.rating || "0");
				for (let i = 0; i < 5; i++) {
					const dot = document.createElementNS("http://www.w3.org/2000/svg", "svg");
					dot.setAttribute("viewBox", "0 0 24 24");
					dot.setAttribute("stroke-width", "2");
					dot.setAttribute("class", "h-3 w-3");

					if (i < Math.floor(rating)) {
						dot.setAttribute("class", "h-3 w-3 fill-accent text-accent");
						dot.setAttribute("stroke", "currentColor");
						dot.innerHTML = '<circle cx="12" cy="12" r="10" />';
					} else if (i < rating) {
						// Half star
						dot.innerHTML = `
							<circle cx="12" cy="12" r="10" class="fill-transparent text-textColor/10" stroke="currentColor" />
							<path d="M12 2 A10 10 0 0 0 12 22 Z" class="fill-accent text-accent" stroke="none" />
						`;
					} else {
						dot.setAttribute("class", "h-3 w-3 fill-transparent text-textColor/10");
						dot.setAttribute("stroke", "currentColor");
						dot.innerHTML = '<circle cx="12" cy="12" r="10" />';
					}
					modalRating.appendChild(dot);
				}
			}

			modal.showModal();
		});
	});

	closeModalBtn?.addEventListener("click", () => modal.close());

	modal?.addEventListener("click", (e) => {
		const dialogDimensions = modal.getBoundingClientRect();
		if (
			e.clientX < dialogDimensions.left ||
			e.clientX > dialogDimensions.right ||
			e.clientY < dialogDimensions.top ||
			e.clientY > dialogDimensions.bottom
		) {
			modal.close();
		}
	});
</script>