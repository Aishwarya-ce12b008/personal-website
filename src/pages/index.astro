---
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Notes
const MAX_NOTES = 5;
const allNotes = await getCollection("note");
const latestNotes = allNotes.sort(collectionDateSort).slice(0, MAX_NOTES);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-1 font-semibold">hello world!</h1>
		<p class="mb-4">
			I'm <span
				class="text-accent dark:text-accent-dark bg-accent/10 dark:bg-accent-dark/10 rounded-sm px-1 py-0.5 font-semibold"
				>Mani</span
			>. I am a product leader based out of <span
				class="text-accent dark:text-accent-dark bg-accent/10 dark:bg-accent-dark/10 rounded-sm px-1 py-0.5 font-semibold"
				>India</span
			>, passionate about building products with love & care, and scaling them.
		</p>
		<p class="mb-4">
			I'm currently <span class="font-semibold">tinker with AI products, explore agents</span> at <a
				href="https://www.sarvam.ai/"
				target="_blank"
				rel="noopener noreferrer"
				class="text-accent dark:text-accent-dark hover:underline">Sarvam AI</a
			>
			Before this, I was at Stable Money, Swiggy.
		</p>
		<p class="mb-4">
			I also had great fun building my own startup as a solopreneur at Qrius. I had a great time
			building but was too early to the AI market.
		</p>
		<p class="mb-4">
			I love meeting folks building in <span class="italic">AI</span> If you are a founder/VC exploring
			the AI space, please do drop me a note & I'll be happy to chat!
		</p>
		<SocialList />
	</section>
	<section class="mt-16">
		<h2 class="title text-accent mb-6 text-xl"><a href="/posts/">Posts</a></h2>
		<ul class="space-y-6" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr]">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	{
		latestNotes.length > 0 && (
			<section class="mt-16">
				<h2 class="title text-accent mb-6 text-xl">
					<a href="/notes/">Notes</a>
				</h2>
				<ul class="space-y-6" role="list">
					{latestNotes.map((note) => (
						<li>
							<Note note={note} as="h3" isPreview />
						</li>
					))}
				</ul>
			</section>
		)
	}
</PageLayout>
