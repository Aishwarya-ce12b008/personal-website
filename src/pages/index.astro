---
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import BookCard from "@/components/BookCard.astro";
import { getAllPosts } from "@/data/post";
import { books } from "@/data/books";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Books - show recently read books
const recentBooks = books
	.filter((book) => book.status === "read" && book.yearRead)
	.sort((a, b) => (b.yearRead || 0) - (a.yearRead || 0))
	.slice(0, 3);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6 font-semibold">hello world!</h1>
		<div class="space-y-5 leading-relaxed">
			<p>
				I'm <span
					class="text-accent dark:text-accent-dark bg-accent/10 dark:bg-accent-dark/10 rounded-sm px-1 py-0.5 font-semibold"
					>Mani</span
				>, a product leader at <a
					href="https://www.sarvam.ai/"
					target="_blank"
					rel="noopener noreferrer"
					class="text-accent dark:text-accent-dark hover:underline">Sarvam AI</a
				>. I've spent the last decade building products, and these days I'm focused on how AI can
				actually be useful for businesses.
			</p>
			<p>
				Before this, I worked at <span
					class="text-accent dark:text-accent-dark bg-accent/10 dark:bg-accent-dark/10 rounded-sm px-1 py-0.5 font-semibold"
					>Swiggy</span
				> where I led product for several teams, and at StableMoney where I helped shape the product
				strategy. I've also started a couple of companies—Qrius and Raena—that taught me most of what
				I know about building products people care about.
			</p>
			<p>
				I write about product, AI, and things I'm learning. If you're working on something
				interesting, I'd enjoy hearing about it.
			</p>
		</div>
		<div class="mt-6">
			<SocialList />
		</div>
	</section>
	<section class="mt-16">
		<h2 class="title text-accent mb-6 text-xl"><a href="/posts/">Posts</a></h2>
		<ul class="space-y-6" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr]">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	{
		recentBooks.length > 0 && (
			<section class="mt-16">
				<div class="flex items-center justify-between mb-6">
					<h2 class="title text-accent text-xl">
						<a href="/books/">Books</a>
					</h2>
					<a
						href="/books/"
						class="text-sm text-textColor/70 hover:text-accent dark:hover:text-accent-dark transition-colors"
					>
						view all →
					</a>
				</div>
				<p class="text-textColor/70 mb-8 text-sm">
					A few books I've read recently that have influenced my thinking
				</p>
				<ul class="space-y-8" role="list">
					{recentBooks.map((book) => (
						<li>
							<BookCard book={book} />
						</li>
					))}
				</ul>
			</section>
		)
	}
</PageLayout>
