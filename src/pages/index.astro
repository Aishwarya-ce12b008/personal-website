---
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Notes
const MAX_NOTES = 5;
const allNotes = await getCollection("note");
const latestNotes = allNotes.sort(collectionDateSort).slice(0, MAX_NOTES);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-1 font-semibold">hello world!</h1>
		<p class="mb-4">
			I'm <span
				class="text-accent dark:text-accent-dark bg-accent/10 dark:bg-accent-dark/10 rounded-sm px-1 py-0.5 font-semibold"
				>Mani</span
			>, a product leader driving AI innovation at <a
				href="https://www.sarvam.ai/"
				target="_blank"
				rel="noopener noreferrer"
				class="text-accent dark:text-accent-dark hover:underline">Sarvam AI</a
			>, where I shape the future of enterprise AI products.
		</p>
		<p class="mb-4">
			With over a decade of product leadership experience, I've successfully led product strategy at
			StableMoney and orchestrated the development of multiple high-impact products at <span
				class="text-accent dark:text-accent-dark bg-accent/10 dark:bg-accent-dark/10 rounded-sm px-1 py-0.5 font-semibold"
				>Swiggy</span
			>. My expertise spans consumer experiences, supply chain optimization, data platforms, and
			large-scale distributed systems.
		</p>
		<p class="mb-4">
			As a founder-turned-product leader, I built and scaled two ventures: Qrius, pioneering
			conversational commerce solutions, and Raena, which revolutionized social commerce in
			Southeast Asia. These experiences honed my ability to transform innovative ideas into
			market-ready products.
		</p>
		<p class="mb-4">
			I hold an engineering degree from Birla Institute of Technology & Sciences, Pilani, and
			combine technical depth with strategic product thinking. My passion lies in building
			transformative products that create lasting impact.
		</p>
		<p class="mb-4">
			I'm deeply engaged in the <span class="italic">AI ecosystem</span> and regularly advise founders
			and VCs on product strategy and AI opportunities. If you're building in this space, I'd love to
			connect and share insights!
		</p>
		<SocialList />
	</section>
	<section class="mt-16">
		<h2 class="title text-accent mb-6 text-xl"><a href="/posts/">Posts</a></h2>
		<ul class="space-y-6" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr]">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	{
		latestNotes.length > 0 && (
			<section class="mt-16">
				<h2 class="title text-accent mb-6 text-xl">
					<a href="/notes/">Notes</a>
				</h2>
				<ul class="space-y-6" role="list">
					{latestNotes.map((note) => (
						<li>
							<Note note={note} as="h3" isPreview />
						</li>
					))}
				</ul>
			</section>
		)
	}
</PageLayout>
